<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Stravaig.ConnOfficer.ViewModels"
             xmlns:views="clr-namespace:Stravaig.ConnOfficer.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Stravaig.ConnOfficer.Views.SideBarNodeView"
             x:DataType="vm:SideBarNodeViewModel">
    
    <Grid ColumnDefinitions="24 *">
        <Image Grid.Column="0"
               Margin="0 2 10 2"
               Width="24"
               Height="24">
            <Image.Source>
                <SvgImage Source="{Binding Icon}"/>
            </Image.Source>
        </Image>
        <TextBlock Grid.Column="1"
                   TextTrimming="CharacterEllipsis"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="{Binding Name}">
            <ToolTip.Tip>
                <TextBlock Text="{Binding Name}"/>
            </ToolTip.Tip>
        </TextBlock>
    </Grid>
    
</UserControl>
